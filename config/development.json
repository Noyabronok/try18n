{

    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },


    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": false, "helpers": "config:dust.helpers" }
                ]
            }
        }
    },



    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {

                        "css": {
                            "module": "construx-less",
                            "files": "/css/**/*.css"
                        },

                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
